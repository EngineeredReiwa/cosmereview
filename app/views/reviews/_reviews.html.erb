<% if reviews.any? %>
  <ul class="list-unstyled mt-2">
    <% reviews.each do |review| %>
      <li class="d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(review.user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= link_to review.user.name, user_path(review.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= review.created_at %></span>
          </div>
          <div>
            <p style="font-weight:bold" class="mb-0"> Title:<%= review.title %>  Cosme:<%= review.cosme %></p>
            <p> Content:<%= review.content %></p>
          </div>
          <div>
            <% if current_user == review.user %>
              <%= link_to "Delete", review, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
            <%= render 'favorites/favorite_button', review: review %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>