<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @review) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="mb-3">
          <%= f.label :title, 'TITLE' %>
          <%= f.text_field :title, class: 'form-control'  %>
        </div>
      
        <div>
          <%= f.label :cosme, 'COSME NAME' %>
          <%= f.text_field :cosme, class: 'form-control'  %>
        </div>
        
        <div>
          <%= f.label :content, 'CONTENT' %>
          <%= f.text_field :content, class: 'form-control'  %>
        </div>
        
        <div class="mt-3">
          <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
      
    </aside>
    <div class="col-sm-8">
      <%= render 'reviews/reviews', reviews: @reviews %>
    </div>
  </div>
  
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the CosmeReviews</h1>
      <p>コスメのクチコミサイトです。</p>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>